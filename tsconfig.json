{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],
      "@/*": ["./src/*"],
      "@features/*": ["./src/_features/*"],
      "@libraries/*": ["./src/_libraries/*"],
      "@messages/*": ["./src/_messages/*"],
      "@providers/*": ["./src/_providers/*"],
      "@sections/*": ["./src/_sections/*"],
      "@utilities/*": ["./src/_utilities/*"],
      "@app/*": ["./src/app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
